<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardResult"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="90dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_waste_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_plastic_detail" />

            <TextView
                android:id="@+id/tv_waste_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/jalnan"
                android:text="플라스틱"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_more_detail"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_waste_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jeongi_anjunche"
            android:text="무색 투명한 먹는샘물, 음료\n폴리에틸렌테레프탈레이트(PET)병\n\n무색페트병 수거함으로 배출해주세요."
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>