<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.greenlens">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GreenLens">

        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.GreenLens">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GreenLens">

        </activity>
        <!-- CouponHistoryActivity 추가 -->
        <activity
            android:name=".view.CouponHistoryActivity"
            android:exported="false" />


        <!-- ShopDetailActivity 추가 -->
        <activity
            android:name=".view.ShopDetailActivity"
            android:exported="false" />

        <activity
            android:name=".view.CouponActivity"
            android:exported="false" />

        <activity
            android:name=".view.PointHistoryActivity"
            android:exported="false" />





    </application>

</manifest>